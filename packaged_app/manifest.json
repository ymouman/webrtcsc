{
  "name": "WebRTC Screen & Application Share",
  "description": "Share your desktop or application using chrome desktopCapture",
  "version": "0.0.0.1",
  "manifest_version": 2,
  "icons": {
    "16": "icon.png",
    "128": "icon.png"
  },
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    "videoCapture", "audioCapture", "desktopCapture"
  ]
}
